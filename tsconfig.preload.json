{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "types": ["node", "electron"]
  },
  "include": [
    "src/preload/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer",
    "src/main"
  ]
}
